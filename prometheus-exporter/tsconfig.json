{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "lib": ["ES2022"],
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": ".",
        "moduleResolution": "NodeNext",
        "allowImportingTsExtensions": false,
        "noEmit": false
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
